<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd http://www.springframework.org/schema/util https://www.springframework.org/schema/util/spring-util.xsd"
       default-lazy-init="true">

    <description>Shiro权限控制</description>
    <!-- 缓存管理器 -->

    <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="staticMethod" value="org.apache.shiro.SecurityUtils.setSecurityManager"/>
    </bean>

    <!-- 处理认证 授权 -->
    <bean id="manageAuthority" class="com.example.zzmdemo.shiro.ManageAuthority">
    </bean>


    <bean id="shiroFilter" class="org.apache.shiro.spring.web.ShiroFilterFactoryBean">
        <property name="filters">
            <util:map>
                <entry key="myUserFilter" value-ref="myUserFilter"/>
            </util:map>
        </property>
        <property name="filterChainDefinitions">
            <value>
                /shiro/** = myUserFilter
            </value>
        </property>
    </bean>

    <bean id="myUserFilter" class="com.example.zzmdemo.shiro.MyUserFilter"/>

</beans>